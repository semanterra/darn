{
    "compilerOptions": {

        "target": "ES6",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "composite": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true

    }
}
